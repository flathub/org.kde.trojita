{
    "app-id": "org.kde.trojita",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebkit.BaseApp",
    "base-version": "5.15-21.08",
    "command": "trojita",
    "rename-icon": "trojita",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",
        "--persist=.abook"
    ],
    "modules": [
        {
            "name": "boost",
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh --prefix=/app --with-libraries=system",
                "./b2 -j $FLATPAK_BUILDER_N_JOBS install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://boostorg.jfrog.io/artifactory/main/release/1.83.0/source/boost_1_83_0.tar.bz2",
                    "sha256": "6478edfe2f3305127cffe8caf73ea0176c53769f4bf1585be237eb30798c3b8e",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6845,
                        "stable-only": true,
                        "url-template": "https://boostorg.jfrog.io/artifactory/main/release/$version/source/boost_${major}_${minor}_$patch.tar.bz2"
                    }
                }
            ]
        },
        {
            "name": "gpgme",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gnupg.org/ftp/gcrypt/gpgme/gpgme-1.22.0.tar.bz2",
                    "sha256": "9551e37081ad3bde81018a0d24f245c3f8206990549598fb31a97a68380a7b71",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1239,
                        "stable-only": true,
                        "url-template": "https://gnupg.org/ftp/gcrypt/gpgme/gpgme-$version.tar.bz2"
                    }
                }
            ]
        },
        {
            "name": "trojita",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DWITH_TESTS=OFF",
                "-DWITH_QT5=ON",
                "-DWITH_ZLIB=ON",
                "-DWITH_RAGEL=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/pim/trojita.git",
                    "commit": "70902f213dafe5bbdd4fc8b0f7288b222276c1c3"
                }
            ]
        }
    ]
}
